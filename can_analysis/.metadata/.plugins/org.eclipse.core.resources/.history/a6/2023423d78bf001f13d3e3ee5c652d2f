#include <stdio.h>
#include <stdlib.h>
#include <string.h>


char *fgetline(char *str, int n, FILE *stream)
{
	fgets(str, n, stream);

	if(str != NULL)
	{
		int slen = strlen(str);
		str[slen-1]=0;
	}

	return str;
}//end of function


int main(void) {

	char s[128] = {0};
	FILE *fb = fopen("abc.txt","r");
		fgetline(s,sizeof(s)/sizeof(s[0]),fb);
		printf("s = %s",s);
	fclose(fb);

	system("pause");
	return EXIT_SUCCESS;
}
